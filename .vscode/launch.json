{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "EdgeVision remote debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../build/examples/EdgeVision",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/opt/atk-dlrk356x-toolchain/usr/bin/aarch64-buildroot-linux-gnu-gdb",
            "miDebuggerServerAddress": "localhost:5039",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set sysroot path on host",
                    "text": "set sysroot ${env:HOME}/rk3566/buildroot/output/rockchip_rk3566/host/aarch64-buildroot-linux-gnu/sysroot",
                    "ignoreFailures": false
                }
            ],
            // 额外的搜索路径, 确保动态库能被对齐
            "additionalSOLibSearchPath": "${env:HOME}/rk3566/buildroot/output/rockchip_rk3566/host/aarch64-buildroot-linux-gnu/sysroot/lib;${env:HOME}/rk3566/buildroot/output/rockchip_rk3566/host/aarch64-buildroot-linux-gnu/sysroot/usr/lib",
        }
    ]
}